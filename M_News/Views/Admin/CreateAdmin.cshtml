



<style>

    .New_MiddleContent {
        width: 50%;
        margin-left: auto;
        margin-right: auto;
    }

    #submitBtn {
        width: 95%;
    }

    .submitdiv {
        width: 100%;
        padding-top: 5%;
        display: flex; /* Use flexbox for centering */
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
    }
</style>
@using (Html.BeginForm("CreateAdmin", "Admin", FormMethod.Post))
{
    <div class="content">
        <div class="New_MiddleContent">

            <label>Username</label>
            <input required type="text" class="form-control" name="Username">


            <label>Password</label>
            <input required type="text" class="form-control" name="Password">




            <label>Name</label>
            <input type="text" class="form-control" name="Name">


            <label>Surname</label>
            <input type="text" class="form-control" name="Surname">



            <div class="submitdiv">

                <button id="submitBtn" class="btn  btn-outline-success">Confirm</button>
            </div>

        </div>


    </div>

}